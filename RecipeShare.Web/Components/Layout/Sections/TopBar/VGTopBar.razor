@inherits VGTopBarBase

<nav class="vg-topbar">
    <div class="left">
        <span class="app-title">RecipeShare</span>
    </div>

    <div class="center">
        <a href="/" class="nav-link">Recipes</a>

        @if (IsLoggedIn)
        {
            <span class="nav-divider">|</span>
            <a href="/my-recipes" class="nav-link">My Recipes</a>

            <span class="nav-divider">|</span>
            <a href="/favourites" class="nav-link">Favourites</a>
        }
    </div>

    <div class="right">
        @if (IsLoggedIn)
        {
            <span class="username">Hello, @UserName</span>

            <form method="post" action="/Account/Logout">
                <AntiforgeryToken />
                <input type="hidden" name="ReturnUrl" />
                <button type="submit" class="logout-button">Logout</button>
            </form>
        }
        else
        {
            <a href="/Account/Login" class="login-link">Login</a>
        }
    </div>
</nav>
